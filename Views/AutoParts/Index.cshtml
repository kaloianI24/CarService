@using CarService.Models.AutoParts
@model IEnumerable<AutoPartsViewModel>

<h1>Parts</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autoPart in Model)
        {
            <tr>
                <td>@autoPart.Name</td>
                <td>@autoPart.Price</td>
                <td>@autoPart.Stock</td>
                <td>
                    <a class="btn btn-primary btn-sm"
                       asp-controller="AutoParts"
                       asp-action="Edit"
                       asp-route-id="@autoPart.Id">
                        Edit
                    </a>

                    <a class="btn btn-danger btn-sm"
                       asp-controller="AutoParts"
                       asp-action="Delete"
                       asp-route-id="@autoPart.Id"
                       onclick="return confirm('Are you sure you want to delete this item?')">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

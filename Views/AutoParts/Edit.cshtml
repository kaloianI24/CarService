<h1>Edit AutoParts</h1>
<form method="post" asp-controller="AutoParts" asp-action="Edit" asp-route-id="@Model.Id">
    <p>
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name" />
    </p>
    <p>
        <label>Price</label>
        <input type="number" step="any" name="Price" value="@Model.Price" />
    </p>
    <p>
        <label>Stock</label>
        <input type="text" step="any" name="Stock" value="@Model.Stock" />
    </p>

    <button type="submit">Edit</button>

    </form>


</>